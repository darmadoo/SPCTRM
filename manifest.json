// Contains properties like extension name, description, version
// number and so on. 
{
	// required 
	"manifest_version": 2, // As Chrome 18, it has to be 2

	"name": "Spctrm", 
	"description": "Pick any color",
	"version": "1.0", 
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"https://ajax.googleapis.com/"
	],

	"icons": {"128": "img/icon.png"}, // include 16 * 16, 48 * 48, 128 * 128
	// "background": {
	// 	"scripts": [], // js scripts running at the back
	// 	"persistent": true
	// },
	// "content_scripts": [
	// 	{
	// 		"matches" :[],
	// 		"js": []
	// 	}
	// ],
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_title": "Spcrtm",
		"default_popup": "popup.html" 
	} // icon
}